<h1>Books#show</h1>
<div class="container">
  <div class="raw"><%= render "layouts/error", obj: @book %></div>
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: @show_book.user %>
      <%= render "books/new", book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table>
        <tr>
          <th>
            <%= link_to user_path(@show_book.user) do %>
              <%= image_tag @show_book.user.get_profile_image("100x100") %></br>
              <%= @show_book.user.name %>
            <% end %>
          </th>
          
          <th>
            <%= link_to book_path(@show_book) do %>
              <%= @show_book.title %>
            <% end %>
          </th>
          <th>
            <%= @show_book.body %>
          </th>
          <% if @show_book.user == current_user %>
          <th><%= link_to "Edit", edit_book_path(@show_book), class: "btn btn-sm btn-success" %></th>
          <th><%= link_to "Destroy", book_path(@show_book), method: :delete, "data-confirm"=>"Are you sure?", class: "btn btn-sm btn-danger" %></th>
          <% end %>
        </tr>
      </table>
      
    </div>
  </div>
</div>